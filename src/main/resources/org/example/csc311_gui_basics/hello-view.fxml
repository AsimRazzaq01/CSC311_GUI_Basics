<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Arc?>

<VBox alignment="CENTER" prefHeight="145.0" prefWidth="119.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.csc311_gui_basics.GUIController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Button fx:id="button_to_make_rotation" mnemonicParsing="false" onAction="#rotate_label" text="click_to_rotate" />
   <Arc fx:id="my_arc" fill="DODGERBLUE" length="270.0" onRotate="#rotate_label" radiusX="25.0" radiusY="25.0" startAngle="45.0" stroke="BLACK" strokeType="INSIDE" type="ROUND" />
    <Button onAction="#onHelloButtonClick" text="Hello!" />
   <Label fx:id="MyName" onRotate="#rotate_label" rotate="340.0" text="Asim Razzaq" />
   <ImageView fx:id="pacman" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@Pacman%20Background%20Removed.png" />
      </image>
   </ImageView>
</VBox>
